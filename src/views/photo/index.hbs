
    <main>
        <div class="container">
            <div class="col-9">
                <!-- Start Pet Photos Post Section -->
                    {{#each pet}}
            
                <div class="card">
                    <div class="top">
                        <!-- User Details and image location -->
                        <div class="userDetails">
                            <div>
                                <div class="profilepic">
                                    <div class="profile_img">
                                        <div class="image">
                                            <img src="/images/person.png" alt="img8">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h3>
                                <p>
                                    <!-- if user's username-->
                                    {{owner.username}}
                                    <br>
                                    <!-- photo's location -->
                                    <span> {{location}} </span>
                                </p>

                            </h3>
                        </div>
                        <!--  -->
                    </div>
                    <!-- Post image -->
                    <div class="imgBx" id={{id}}>
                        <img src= {{imageUrl}} alt="post" class="cover">
                    </div>
                    <!-- Name of Pet -->
                    <h5 class="petName">Name: {{name}} </h5>
                    <!-- Age of Pet -->
                    <h5 class="petAge">Age: {{age}} </h5>
                    <!-- Link to Photo Details Page -->
                    <a href="/pets/{{_id}}" id="see-details">
                        <h4 class="details">See details</h4>
                    </a>
                </div>

                <!--If there are no photo yet!-->
                    {{else}}
                <article class="not-available-photo">
                    <h1>No photo posts yet.</h1>
                </article>
                    {{/each}}
            </div>

        </div>
    </main>
